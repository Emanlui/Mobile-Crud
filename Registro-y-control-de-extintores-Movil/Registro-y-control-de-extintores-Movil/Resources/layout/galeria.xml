<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#063E65"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="55.0dp"
            android:id="@+id/linearLayout2">
            <EditText
                android:layout_width="179.0dp"
                android:layout_height="38.5dp"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:id="@+id/buscarText"
                android:layout_marginLeft="22.0dp"
                android:layout_marginRight="14.5dp"
                android:layout_marginTop="9.0dp"
                android:layout_marginBottom="6.5dp" />
            <Button
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:text="Buscar"
                android:layout_width="151.0dp"
                android:layout_height="match_parent"
                android:id="@+id/buscarButton"
                android:layout_marginTop="9.0dp"
                android:layout_marginBottom="6.5dp" />
        </LinearLayout>
        <ImageView
            android:src="@android:drawable/divider_horizontal_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom=".1dp"
            android:paddingTop=".2dp"
            android:background="#FFFFFF" 
            android:id="@+id/lineaImage"/>
        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView1" >
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/galeriaLayout" />
        </ScrollView>
        
    </LinearLayout>
    
</LinearLayout>
