<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#063E65">
        <TextView
            android:text="Recuperar contraseña"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16.5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="38.5dp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:id="@+id/usuarioCorreo"
            android:layout_marginTop="47.0dp"
            android:layout_marginRight="23.5dp"
            android:layout_marginLeft="17.0dp"
            android:layout_marginBottom="5.0dp" />
        <Button
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:text="RESTABLECER CONTRASEÑA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recuperarButton"
            android:layout_marginRight="23.5dp"
            android:layout_marginLeft="17.0dp"
            android:layout_marginTop="18.0dp" />
        <TextView
            android:text="By signing up, you agree to Photo’s Terms of Service and Privacy Policy."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/textView3"
            android:layout_marginTop="27.0dp"
            android:layout_marginRight="7.0dp"
            android:layout_marginLeft="13.5dp" />
    </LinearLayout>
        
</LinearLayout>
